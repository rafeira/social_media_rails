
- if liked? post.likes
    = link_to t('links.dislike'), post_likes_path(post.id), method: :delete, remote: true, data: { controller: 'remote', action: '' }, class:"button is-danger", id: "like-dislike-button"
- else
    = link_to t('links.like'), post_likes_path(post.id), method: :post, remote: true, data: { controller: 'remote', action: '' }, class:"button is-success", id: "like-dislike-button"