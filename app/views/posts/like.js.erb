console.log("<%=params[:action]%>")
<% if params[:action] == "destroy" %>
    changeToDLike()
<% end %>
<% if params[:action] == "create" %>
    changeToDislike()
<% end %>

function changeToDLike() {
    var button = document.querySelector('#like-dislike-button')
    button.setAttribute("data-method", "post")
    button.classList.replace("is-danger", "is-success")
    button.textContent = "<%=t('links.like')%>"
}
function changeToDislike() {
    var button = document.querySelector('#like-dislike-button')
    button.setAttribute("data-method", "delete")
    button.classList.replace("is-success", "is-danger")
    button.textContent = "<%= t('links.dislike') %>"
}