
.tile
  .tile.is-parent
    %article.tile.is-child.notification
      %p.title
        = user.full_name
      %p.subtitle
        = "#{user.followers.length} seguidores"
      %p.subtitle
        = "Email: #{user.email}"
      - if logged_user.follows?(user)
        = render(partial: 'friendships/unfollow_link', locals: {user: user})
      - else
        = render(partial: 'friendships/follow_link', locals: {user: user})
