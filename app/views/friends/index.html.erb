<h1>Olá mundo</h1>
<table class="table">
  <p><%= current_user.email %></p>
  <p><%= button_to 'Fazer logoff', destroy_user_session_path, method: :delete %></p>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
    <tr>
      <td><%= friend.id %></td>
      <td><%= friend.email %></td>
      <% if followed? friend %>
        <td>
          <%= button_to 'Parar de seguir', root_url + "friends/#{friend.id}", method: :delete %>
      <% else %>
        <td><span>
          <%= button_to 'Seguir', root_url + "friends/#{friend.id}", method: :post  %>
      <% end %>
        </span>
      </td>
    </tr>
    <% end %>   
  </tbody>
</table>