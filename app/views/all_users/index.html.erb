<h1>Olá mundo</h1>
<table class="table">
  <p><%= current_user.email %></p>
  <p><%= button_to 'Fazer logoff', destroy_user_session_path, method: :delete %></p>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @all_users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <% if followed? user %>
        <td>
          <%= button_to 'Parar de seguir', root_url + "all_users/#{user.id}", method: :delete %>
      <% elsif follower? user %>
        <td><span>
          <%= button_to 'Seguir de volta', root_url + "all_users/#{user.id}", method: :post  %>
      <% else %>
        <td><span>
          <%= button_to 'Seguir', root_url + "all_users/#{user.id}", method: :post  %>
      <% end %>
        </span>
      </td>
    </tr>
    <% end %>   
  </tbody>
</table>