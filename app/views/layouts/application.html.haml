!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Social Media
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
  %body
    %nav.navbar.is-primary
      .navbar-brand
        %a.navbar-item{:href => "https://bulma.io"}
          %img{:alt => "Bulma: a modern CSS framework based on Flexbox", :height => "28", :src => "https://bulma.io/images/bulma-logo-white.png", :width => "112"}/
        .navbar-burger{"data-target" => "navMenuColorprimary-example"}
          %span
          %span
          %span
      #navMenuColorprimary-example.navbar-menu
        .navbar-start
          %a.navbar-item{:href => "https://bulma.io/"}
          - if user_signed_in?
            = link_to t('links.see_posts'), posts_path, class: "navbar-item" 
          
        .navbar-end
          .navbar-item
            .field.is-grouped
          .navbar-item.has-dropdown.is-hoverable
            - if user_signed_in?
              %a.navbar-link{:href => "https://bulma.io/documentation/overview/start/"}
                = current_user.email
            .navbar-dropdown.is-right
              %a.navbar-item{:href => "#"}
                Ver perfil
              = link_to 'Pessoas',  all_users_path, class: "navbar-item"
              = link_to 'Criar uma publicação',  new_post_path, class: "navbar-item"
              %hr.navbar-divider
              = button_to 'Fazer logoff', destroy_user_session_path, method: :delete, class: "navbar-item"
    = yield
