!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      = t('application_name')
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
  %body
    %nav.navbar.is-primary
      .navbar-brand
        = link_to( root_path,{ class: "navbar-item"}) do
          = image_tag 'logo.png', height: "28"
          %span.ml-2
            = t('application_name')
        .navbar-burger{"data-target" => "navMenuColorprimary-example"}
          %span
          %span
          %span
      #navMenuColorprimary-example.navbar-menu
        .navbar-start
          %a.navbar-item{:href => "https://bulma.io/"}
          - if user_signed_in?
            = link_to t('links.see_posts'), posts_path, class: "navbar-item" 
          
        .navbar-end
          .navbar-item
            .field.is-grouped
          .navbar-item.has-dropdown.is-hoverable
            %a.navbar-link
              = current_user&.email
            .navbar-dropdown.is-right
              = link_to "English", {params: {locale: 'en'}}, class:"navbar-item"
              = link_to "PortuguÃªs",{ params: {locale: 'pt-BR'}}, class:"navbar-item"
              - if user_signed_in?
                %a.navbar-item{:href => "#"}
                  = t('links.profile')
                = link_to t('links.see_people'),  all_users_path, class: "navbar-item"
                = link_to t('links.new.post'),  new_post_path, class: "navbar-item"
              %hr.navbar-divider
              = button_to t('links.logoff'), destroy_user_session_path, method: :delete, class: "navbar-item"
    = yield
